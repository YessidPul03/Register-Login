@model App_DVP.Models.EntidadPersona
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="Registrar" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombres" asp-for="Nombres" required />                        
                            <input class="form-control mb-3" type="text" placeholder="Apellidos" asp-for="Apellidos" required />
                            <input class="form-control mb-3" type="text" placeholder="Numero Identificacion" asp-for="NumeroIdentificacion" required />
                            <input class="form-control mb-3" type="text" placeholder="Email" asp-for="Email" required />
                            <input class="form-control mb-3" type="text" placeholder="Tipo Identificacion" asp-for="TipoIdentificacion" required />
                            <input class="form-control mb-3" type="password" placeholder="Nueva contraseña" asp-for="NuevaContrasena" required />

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-success" type="submit">Registrarme</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya estas registrado? <a href="@Url.Action("InicioSesion","Inicio")">Iniciar Sesion</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

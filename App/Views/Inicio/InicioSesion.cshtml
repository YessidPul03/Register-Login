
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InicioSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('/Views/double_v_partners_cover.jpg') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-5 pt-5" >
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Inicio Sesion
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="InicioSesion" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Usuario-Correo" required name="user"/>
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="pass" />

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                            </div>
                            @if(ViewData["Mensaje"]!= null)
                            {
                             <div class="form-group">
                                 <div class="alert alert-danger" role="alert">
                                     @ViewData["Mensaje"]
                                 </div>
                             </div>   
                            }
                            ¿Deseas crear tu cuenta? <a href="@Url.Action("Registrar","Inicio")">Resgistrar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
